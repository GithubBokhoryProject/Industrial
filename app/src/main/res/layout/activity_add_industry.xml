<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ActivityAddIndustry">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/imgindustryadduser"/>
    <EditText
        android:id="@+id/editemail_id_adduser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Email"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/editpass_id_adduser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:inputType="textPassword"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="اضافه صنيعي جديد"
        android:textSize="20dp"
        android:background="#0E40D6"
        android:textColor="#fff"
        android:onClick="btn_Add"
        />

</LinearLayout>