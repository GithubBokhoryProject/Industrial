<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_userview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/imgindustryadduser"
                android:layout_margin="20dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nameview_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Name"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/phoneview_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Phone"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/specializeview_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="specialization"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:textColor="#000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="MainLocation"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textColor="#00f"
                    />
                <TextView
                    android:id="@+id/mainlocationview_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="----------------"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textColor="#f00"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="anotherLocation"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textColor="#00f"
                    />
                <TextView
                    android:id="@+id/anotherlocationview_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="----------------"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:textColor="#f00"
                    />


            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>